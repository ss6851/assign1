
def code_404(c, text):
    msg = "HTTP/1.1 404 Not Found\nConnection: close\nContent-Type: text/html\n\n<html><h1>"+text+"</h1></html>\n"
    c.send(msg)

def code_403(c, text):
    msg = "HTTP/1.1 403 Forbidden\nConnection: close\nContent-Type: text/html\n\n<html><body>"+text+"</body>\n"
    c.send(msg)

def code_200(c, text):
    msg = "HTTP/1.1 200 OK\nConnection: close\nContent-Type: text/html\n\n"
    c.send(msg)
